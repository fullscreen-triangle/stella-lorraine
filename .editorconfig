root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120

[*.rs]
indent_size = 4

[*.toml]
indent_size = 2

[*.yml]
indent_size = 2

[*.yaml]
indent_size = 2

[*.json]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
max_line_length = off

[Makefile]
indent_style = tab
indent_size = 4

[*.py]
indent_size = 4
max_line_length = 120

[*.js]
indent_size = 2

[*.ts]
indent_size = 2

[*.html]
indent_size = 2

[*.css]
indent_size = 2

[*.sh]
indent_size = 2

[*.dockerfile]
indent_size = 2

[Dockerfile*]
indent_size = 2 